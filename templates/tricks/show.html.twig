{% extends 'base.html.twig' %}

{% block title %}
  Tricks
{% endblock %}
{% block header %}
  <div class="header"
    style="background-image: url('{{
    asset(
      '/uploads/' ~ trick.images[0].name
    )
    }}');')">
    <h1 class="header-h1">
      {{ trick.name }}
    </h1>
  </div>
{% endblock %}

{% block body %}
  <table class="table">
    <tbody>
      <tr>
        <th>
          Id
        </th>
        <td>
          {{ trick.id }}
        </td>
      </tr>
      <tr>
        <th>
          Name
        </th>
        <td>
          {{ trick.name }}
        </td>
      </tr>
      <tr>
        <th>
          Discription
        </th>
        <td>
          {{ trick.discription }}
        </td>
      </tr>
      <tr>
        <th>
          Creation_date
        </th>
        <td>
          {{ trick.creationDate ? trick.creationDate|date('Y-m-d H:i:s') : '' }}
        </td>
      </tr>
      <tr>
        <th>
          Modification_date
        </th>
        <td>
          {{ trick.modificationDate
            ? trick.modificationDate|date('Y-m-d H:i:s')
            : '' }}
        </td>
      </tr>
    </tbody>
  </table>

  <a href="{{ path('tricks_index') }}">back to list</a>

  <a href="{{
    path(
      'tricks_edit',
      {
        id: trick.id
      }
    )
    }}">
    edit
  </a>

  {{ include('tricks/_delete_form.html.twig') }}
{% endblock %}
