{% extends 'base.html.twig' %}

{% block title %}
  Tricks
{% endblock %}
{% block header %}
  <div class="headerTrick"
    style="background-image: url('{{
    asset(
      '/uploads/' ~ trick.images[0].name
    )
    }}');')">
    <h1 class="header-h1">
      {{ trick.name }}
    </h1>
  </div>
{% endblock %}

{% block body %}
  <div class="section" style="background-image: url('./assets/images/1.svg');">
    <div class="container py-md">
      <div class="row justify-content-between align-items-center">
        <div class="col-lg-6 mb-lg-auto">
          <div class="rounded overflow-hidden transform-perspective-left">
            <div id="carousel_example"
              class="carousel slide"
              data-ride="carousel">
              <ol class="carousel-indicators">
                {% for key in trick.images|keys %}
                  <li data-target="#carousel_example" data-slide-to="{{ key }}">

                  </li>
                {% endfor %}
              </ol>
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img class="img-fluid"
                    src="{{ asset('/uploads/' ~ trick.images[0].name) }}"
                    alt="First slide" />
                </div>
                {% for image in trick.images|slice(1, 6) %}
                  <div class="carousel-item">
                    <img class="img-fluid"
                      src="{{ asset('/uploads/' ~ image.name) }}"
                      alt="First slide" />
                  </div>
                {% endfor %}
              </div>
              <a class="carousel-control-prev"
                href="#carousel_example"
                role="button"
                data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true">

                </span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next"
                href="#carousel_example"
                role="button"
                data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true">

                </span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>
        </div>
        <div class="col-lg-5 mb-5 mb-lg-0">
          <div class="rounded overflow-hidden transform-perspective-left">
            <div id="carousel_example2"
              class="carousel slide"
              data-ride="carousel">
              <ol class="carousel-indicators">
                {% for key in trick.videos|keys %}
                  <li data-target="#carousel_example2"
                    data-slide-to="{{ key }}">

                  </li>
                {% endfor %}
              </ol>
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <iframe width="100%"
                    height="315"
                    src="{{ trick.videos[0].embed }}"
                    frameborder="0"
                    allow="accelerometer; autoplay; muted; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen></iframe>
                </div>
                {% for video in trick.videos|slice(1, 4) %}
                  <div class="carousel-item">
                    <iframe width="100%"
                      height="315"
                      src="{{ video.embed }}"
                      frameborder="0"
                      allow="accelerometer; autoplay; muted; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                      allowfullscreen></iframe>
                  </div>
                {% endfor %}
              </div>
              <a class="carousel-control-prev"
                href="#carousel_example2"
                role="button"
                data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true">

                </span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next"
                href="#carousel_example2"
                role="button"
                data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true">

                </span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row py-3 align-items-center">
    <div class="col-sm-3">
      <small class="text-uppercase text-default font-weight-bold">
        Description
      </small>
    </div>
    <div class="col-sm-9">
      <p class="lead">
        {{ trick.description }}
      </p>
      <span class="badge badge-pill badge-primary text-uppercase">
        {{ trick.group }}
      </span>
      <span class="badge badge-pill badge-warning text-uppercase">
        Crée le : {{ trick.creationDate ? trick.creationDate|date('Y-m-d H:i:s') : '' }}
      </span>
      {% if trick.modificationDate %}
        <span class="badge badge-pill badge-info text-uppercase">
          Modifier le : {{ trick.modificationDate|date('Y-m-d H:i:s') }}
        </span>
      {% endif %}
    </div>
  </div>
  <a class="btn btn-default" href="{{ path('tricks_index') }}">
    Retourner à la liste
  </a>
  {% if app.user %}
    <a class="btn btn-warning float-right"
      href="{{
      path(
        'tricks_edit',
        {
          id: trick.id
        }
      )
      }}">
      Modifier
    </a>
    <div class="float-right mr-4">
      {{ include('tricks/_delete_form.html.twig') }}
    </div>
  {% endif %}
  {% if app.user %}
    <hr />
    <div class="comments">
      <small class="text-uppercase text-default font-weight-bold">
        laissez un commentaire
      </small>
      {{ form(form) }}
    </div>
  {% endif %}
  {% if not app.user %}
    <hr />
    <div class="regiter_to_comment">
      <h3 class="heading-title text-primary text-center mb-4">
        Connectez-vous ou inscrivez-vous pour laisser un commentaire
      </h3>
      <div class="action_button text-center">
        <a href="{{ path('app_login') }}"
          class="btn btn-lg btn-primary"
          type="a">
          Connectez-vous
        </a>
        <a href="{{ path('register') }}"
          class="btn btn-lg btn-primary"
          type="button">
          S'inscrire
        </a>
      </div>
    </div>
  {% endif %}
  <hr />
  {% for comment in trick.comments %}
    <div class="row py-3 align-items-center comment-container">
      <div class="col-sm-3 comment-profile">
        <img src="{{
          comment.user.photo
            ? comment.user.photo
            : asset('assets/images/profil.png')
          }}"
          alt="Raised circle image"
          class="img-fluid rounded-circle shadow-lg"
          style="width: 150px;height:130px" />
        <small class="text-uppercase font-weight-bold">
          {{ comment.user.firstname
            ? comment.user.firstname ~ ' ' ~ comment.user.lastname
            : comment.user.username }}
        </small>
      </div>
      <div class="col-sm-9">
        <p class="mb-0">
          {{ comment.content }}
        </p>
        <span class="badge badge-pill badge-info text-uppercase">
          Crée le : {{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}
        </span>
      </div>
    </div>
  {% endfor %}
{% endblock %}
