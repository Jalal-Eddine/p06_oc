<form method="post"
  action="{{
  path(
    'tricks_delete',
    {
      id: trick.id
    }
  )
  }}"
  onsubmit="return confirm('Êtes-vous sûr de bien vouloir supprimer cette figure ?');">
  <input type="hidden"
    name="_token"
    value="{{ csrf_token('delete' ~ trick.id) }}" />
  <button class="btn btn-danger">Delete</button>
</form>
